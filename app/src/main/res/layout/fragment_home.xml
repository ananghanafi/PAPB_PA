<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/atas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.masbie.papb_pa.Home">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Promo" />

                <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:id="@+id/runnable"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/diskon" />

                    <ImageView
                        android:id="@+id/runnable1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/diskon2" />

                    <ImageView
                        android:id="@+id/runnable2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/diskon3" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/populer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Populer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/p"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/bajubirudepan"
                        android:paddingRight="10dp" />

                    <ImageView
                        android:id="@+id/p1"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/bajuhijaudepan"
                        android:paddingRight="10dp" />

                    <ImageView
                        android:id="@+id/p2"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/bajuhitamdepan"
                        android:paddingRight="10dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Kategori" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Polo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kaos Panjang" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kaos Pendek" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/k"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/bajubirudepan"
                                android:paddingRight="10dp" />

                            <ImageView
                                android:id="@+id/k1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/bajuhijaudepan"
                                android:paddingRight="10dp" />

                            <ImageView
                                android:id="@+id/k2"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/bajuhitamdepan"
                                android:paddingRight="10dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/k3"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/bajubirudepan"
                                android:paddingRight="10dp" />

                            <ImageView
                                android:id="@+id/k4"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/bajuhijaudepan"
                                android:paddingRight="10dp" />

                            <ImageView
                                android:id="@+id/k5"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/bajuhitamdepan"
                                android:paddingRight="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/len"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center|right"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton

            android:id="@+id/tologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@android:drawable/sym_action_chat"
            app:backgroundTint="@color/colorPrimary"
            app:layout_anchor="@id/len"
            app:useCompatPadding="true" />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
